<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_trade"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title_trade_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El corte inglés"
        style="@style/TextStyle11"
        android:layout_marginTop="16dp"
        android:layout_marginStart="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_content_trade_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pago aceptado"
        style="@style/TextStyle12"
        android:layout_marginTop="2dp"
        android:layout_marginStart="19dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_trade_history"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_value_trade_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-50€"
        style="@style/TextStyle10"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/img_dotted"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dotted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content_trade_history"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>