                        app:layout_constraintBottom_toBottomOf="@id/content_paycard"
                        android:text="ðŸŽ¬"
                        android:layout_marginEnd="57dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        style="@style/TextStyle18"
