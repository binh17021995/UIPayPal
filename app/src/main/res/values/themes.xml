<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesignUI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Floating" parent="Widget.Design.FloatingActionButton">
        <!---rest of your style-->
        <item name="android:foreground">@drawable/btn_home</item>
    </style>
    <style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background"> @drawable/btn_enviar_ahora</item>
    </style>
    <style name="Floating2" parent="Widget.Design.FloatingActionButton">
        <!---rest of your style-->
        <item name="android:foreground">@drawable/btn_add_card</item>
    </style>



</resources>